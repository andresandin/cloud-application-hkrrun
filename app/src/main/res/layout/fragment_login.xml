<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingTop="100dp"

    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textSize="40dp"
        android:gravity="center"
        android:id="@+id/loginPage"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints"
        android:layout_marginStart="105dp"
        android:layout_marginLeft="105dp"
        android:padding="5dp"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/userNameLN"
        android:hint="Username"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:padding="5dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginPage" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/passwordLN"
        android:hint="Password"
        android:gravity="center"
        android:layout_marginStart="75dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userNameLN"
        android:layout_marginLeft="75dp"
        android:padding="5dp"/>



    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/loginBtnLN"
        android:gravity="center"
        android:layout_marginStart="75dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordLN"
        android:layout_marginLeft="75dp"
        android:padding="5dp"
        android:text="Log In"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/registerBtnLN"
        android:gravity="center"
        android:layout_marginStart="75dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginBtnLN"
        android:layout_marginLeft="75dp"
        android:padding="5dp"
        android:text="Register"/>


</androidx.constraintlayout.widget.ConstraintLayout>
